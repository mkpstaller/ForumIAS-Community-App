<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llUserSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp3"
        android:paddingRight="@dimen/dp3"
        android:paddingTop="@dimen/dp3"
        android:paddingBottom="@dimen/dp3"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_margin="@dimen/dp2">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:src="@drawable/user_profile"
                android:layout_margin="@dimen/dp5"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:src="@drawable/ic_online"
                android:layout_marginLeft="@dimen/dp50"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp50"/>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp5"
            android:weightSum="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Musafir Prajapati"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:fontFamily="@font/segoe_bold"
                    android:id="@+id/tvChatUserName"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello India how are you?????"
                    android:paddingRight="@dimen/dp5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:fontFamily="@font/segoe_regular"
                    android:layout_marginTop="@dimen/dp10"
                    android:id="@+id/tvShowCurrentChat"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="@dimen/dp0"
              android:layout_height="match_parent"
              android:layout_weight="0.2"
              android:orientation="vertical">
              <androidx.appcompat.widget.AppCompatTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="15:25 pm"
                  android:textSize="@dimen/sp11"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/gray_dark"
                  android:id="@+id/tvChatDateTime"/>
              <androidx.appcompat.widget.AppCompatTextView
                  android:layout_width="@dimen/dp20"
                  android:layout_height="@dimen/dp20"
                  android:text="15"
                  android:textSize="@dimen/sp10"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:padding="@dimen/dp2"
                  android:background="@drawable/blue_circle_shape"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/dp10"
                  android:id="@+id/tvCount"/>
          </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp65"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/gray" />
</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_color"
    android:id="@+id/llSettingSection"
    android:elevation="@dimen/dp5"
    tools:context="com.forumias.beta.ui.deta.forumias.setting.SettingActivityActivity">

    <RelativeLayout
        android:id="@+id/rlToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp6"
            android:src="@drawable/ic_back_key"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/action_settings"
            android:layout_centerInParent="true"
            android:gravity="center"
            app:fontFamily="@font/segoe_bold"
            android:textColor="@color/black_light"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlSendFeedBack"
        android:layout_width="match_parent"
        android:background="@drawable/custom_ripple"
        android:layout_height="@dimen/dp70">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIconOne"
                android:layout_width="@dimen/dp30"
                android:layout_height="match_parent"
                android:padding="@dimen/dp4"
                android:src="@drawable/ic_send_feadback"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSendfeedBakc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:text="Send Feedback"/>
            
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_right_arrow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

        <View
            android:id="@+id/viewTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/border_color"/>



        <RelativeLayout
            android:id="@+id/rlInviteFriend"
            android:layout_width="match_parent"
            android:background="@drawable/custom_ripple"
            android:layout_height="@dimen/dp70">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivIconTwo"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp4"
                    android:src="@drawable/ic_invite_friend"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInviteFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Invite Friend"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_right_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/viewOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp10"
            android:visibility="gone"
            android:background="@color/border_color"/>

        <RelativeLayout
            android:id="@+id/rlSecurity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivIconThree"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp4"
                    android:src="@drawable/ic_lock"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSecurity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Security"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_right_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/viewThree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/border_color"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/custom_ripple"
            android:layout_height="@dimen/dp70">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivIconFour"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp4"
                    android:src="@drawable/ic_about"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Version"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVersionCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="v 1.0"
                android:paddingRight="@dimen/dp5"
                android:gravity="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/viewFour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/border_color"/>

        <RelativeLayout
            android:id="@+id/llTermsCondition"
            android:layout_width="match_parent"
            android:background="@drawable/custom_ripple"
            android:layout_height="@dimen/dp70">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivFive"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp4"
                    android:src="@drawable/ic_pages"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvtermCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Terms and Condition"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_right_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/viewFive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/border_color"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/custom_ripple"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivSix"
                android:layout_width="@dimen/dp30"
                android:layout_height="match_parent"
                android:padding="@dimen/dp4"
                android:src="@drawable/ic_exit"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:text="Log out"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
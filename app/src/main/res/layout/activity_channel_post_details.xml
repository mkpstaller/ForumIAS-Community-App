<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.forumias.beta.ui.deta.forumias.channel.channel_post.ChannelPostDetailsActivity">

    <include layout="@layout/custom_toolbar_new"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:visibility="gone"
        android:padding="@dimen/dp10"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:padding="@dimen/dp15"
            android:src="@drawable/ic_back_key"
            android:visibility="visible" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSlug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp13"
            android:visibility="gone"
            android:fontFamily="@font/proximanova_bold"
            android:paddingRight="@dimen/dp50"
            android:text=""/>

    </androidx.appcompat.widget.LinearLayoutCompat>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp18"
            android:fontFamily="@font/proximanova_bold"
            android:padding="@dimen/dp6"
            android:text="Reminder and Important instruction for BT-1"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp15"
            app:cardCornerRadius="@dimen/dp10">
            <include layout="@layout/post_image_section"/>
        </com.google.android.material.card.MaterialCardView>


        <WebView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp6"
            android:layout_marginTop="@dimen/dp15"
            tools:ignore="WebViewLayout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp15"
            android:background="@color/gray"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            android:padding="@dimen/dp6"
            android:layout_marginTop="@dimen/dp6"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="match_parent"
                android:padding="@dimen/dp0"
                android:src="@drawable/ic_visibility" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvViewCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/proximanova_regular"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp4"
                android:text="0"
                android:textColor="@color/black" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
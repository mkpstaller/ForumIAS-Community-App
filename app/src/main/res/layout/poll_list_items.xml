        <RelativeLayout
            android:id="@+id/pollSectionOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp15">

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/oneSeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/custom_thumb_fail"
                android:thumb="@android:color/transparent" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:buttonTint="@color/blue"
                    android:id="@+id/radioButton1"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPollText"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="One Text One"
                    android:textColor="@color/black"
                    android:fontFamily="@font/segoe_regular"
                    android:gravity="center_vertical"
                    tools:ignore="MissingConstraints"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPerOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe_regular"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp15" />

        </RelativeLayout>

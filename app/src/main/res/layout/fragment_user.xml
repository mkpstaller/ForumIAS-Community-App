<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/rlUserMainPage"
    tools:context="com.forumias.beta.com.forumias.beta.ui.deta.forumias.user.UserFragment">

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="@dimen/dp60"
       app:spanCount="2"
       android:visibility="gone"
       app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
       android:layoutAnimation="@anim/layout_animation_up_to_down"
       android:id="@+id/rvUser"/>
   <ProgressBar
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:visibility="visible"
       android:layout_margin="@dimen/dp180"
       android:id="@+id/progressBar"/>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.forumias.beta.ui.deta.forumias.profile.ProfileNotificationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmailNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Notification"
                android:fontFamily="@font/segoe_bold"
                android:textSize="@dimen/dp17"
                android:paddingLeft="@dimen/dp3"
                android:layout_marginTop="@dimen/dp6"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp3"
                android:background="@color/low_gray"
                android:layout_marginTop="@dimen/dp3"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxOne"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:layout_marginTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp5"
                android:text="Someone created a post whom I am following"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxTwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:paddingLeft="@dimen/dp5"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:text="Someone Mentions Me"
                android:layout_marginTop="@dimen/dp5"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxThree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:paddingLeft="@dimen/dp5"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:text="Someone Follows Me"
                android:layout_marginTop="@dimen/dp5"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxFour"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:paddingLeft="@dimen/dp5"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:text="My request to join a group is accepted"
                android:layout_marginTop="@dimen/dp5"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxFive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:paddingLeft="@dimen/dp5"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:layout_marginTop="@dimen/dp5"
                android:text="My request to subscribe a channel is approved"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxSix"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:layout_marginTop="@dimen/dp5"
                android:text="Someone answers my Question"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxSeven"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:paddingLeft="@dimen/dp5"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:layout_marginTop="@dimen/dp5"
                android:text="Someone like / comment on my post"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkboxEight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:fontFamily="@font/segoe_regular"
                android:textSize="@dimen/sp13"
                android:paddingLeft="@dimen/dp5"
                android:gravity="center_vertical"
                android:textColor="@color/black_light"
                android:layout_marginTop="@dimen/dp5"
                android:text="Someone requests me to answer a question"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp55"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp10"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/segoe_bold"
                android:gravity="center"
                android:text="@string/update"
                app:cornerRadius="@dimen/dp10"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</FrameLayout>
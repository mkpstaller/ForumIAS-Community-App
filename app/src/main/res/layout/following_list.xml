<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlFollowingSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llPostImageSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivChannelImage"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp6"
                    android:paddingLeft="@dimen/dp6"
                    android:src="@drawable/user_placeholder"
                    android:visibility="gone" />

                <com.forumias.beta.utility.CircularTextView
                    android:id="@+id/tvChannelFirstText"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp6"
                    android:fontFamily="@font/proximanova_bold"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp17" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_right_arrow"
                android:fontFamily="@font/proximanova_bold"
                android:padding="@dimen/dp10"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp13" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp55"
        android:background="@color/gray" />
</androidx.appcompat.widget.LinearLayoutCompat>